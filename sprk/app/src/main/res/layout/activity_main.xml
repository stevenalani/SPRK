<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.hs_esslingen.sprk.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/Jump"
        android:layout_width="168dp"
        android:layout_height="162dp"

        android:layout_marginLeft="8dp"
        android:onClick="onClick"
        android:text="Jump"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.923"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.401"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/Testdrive"
        android:layout_width="168dp"
        android:layout_height="162dp"

        android:layout_marginLeft="8dp"
        android:text="Testdrive"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.038"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.401"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/Connect"
        android:layout_width="368dp"
        android:layout_height="58dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onClick"
        android:text="connect SPRK+"
        app:layout_constraintBottom_toTopOf="@+id/Disconnect"
        app:layout_constraintVertical_bias="0.862"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/Disconnect"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/Disconnect"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/Disconnect"
        android:layout_width="368dp"
        android:layout_height="58dp"
        android:layout_marginTop="8dp"
        android:onClick="onClick"
        android:text="Disconnect SPRK+"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Jump"
        app:layout_constraintVertical_bias="0.94"
        tools:layout_editor_absoluteX="8dp" />

    <SeekBar
        android:id="@+id/speedbar"
        android:layout_width="368dp"
        android:layout_height="34dp"
        android:max="100"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="118dp"
        android:layout_height="29dp"
        android:text="Drive Speed:"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/labSpeed"
        android:layout_width="60dp"
        android:layout_height="29dp"
        android:layout_marginLeft="14dp"
        android:text="0.5"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        tools:layout_editor_absoluteY="16dp" />

</android.support.constraint.ConstraintLayout>
