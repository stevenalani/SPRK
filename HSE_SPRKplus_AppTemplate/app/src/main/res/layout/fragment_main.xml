<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.hs_esslingen.hse_sprkplus_apptemplate.MainActivity$PlaceholderFragment"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/Jump"
        android:layout_width="160dp"
        android:layout_height="170dp"

        android:onClick="onClick"
        android:text="Jump"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/Testdrive"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.864"
        android:layout_marginBottom="61dp"
        app:layout_constraintBottom_toTopOf="@+id/Connect"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/Testdrive"
        android:layout_width="160dp"
        android:layout_height="170dp"

        android:text="Testdrive"
        android:textSize="18sp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="61dp"
        app:layout_constraintBottom_toTopOf="@+id/Connect"
        android:layout_marginStart="16dp" />

    <SeekBar
        android:id="@+id/speedbar"
        android:layout_width="335dp"
        android:layout_height="37dp"
        android:max="100"
        android:progressBackgroundTint="@android:color/holo_blue_light"
        android:thumbTint="@android:color/holo_blue_dark"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="34dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="Drive Speed:"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/speedbar"
        android:layout_marginBottom="38dp"
        app:layout_constraintBottom_toTopOf="@+id/textView" />

    <TextView
        android:id="@+id/labSpeed"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text="0.5"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="@+id/speedbar"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/labsSpeed"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text="0.25"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="@+id/labSpeed"
        app:layout_constraintTop_toTopOf="@+id/textView"
        android:layout_marginTop="-1dp"
        android:layout_marginRight="0dp" />

    <Button
        android:id="@+id/Connect"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="250dp"
        android:layout_height="57dp"
        android:layout_marginBottom="21dp"
        android:background="@android:color/holo_green_light"
        android:elevation="0dp"
        android:text="connect SPRK+"
        app:layout_constraintBottom_toTopOf="@+id/Disconnect"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:background="@android:color/holo_green_light" />

    <Button
        android:id="@+id/Disconnect"
        android:layout_width="250dp"
        android:layout_height="58dp"
        android:layout_marginBottom="18dp"
        android:background="@color/colorAccent"
        android:onClick="onClick"
        android:text="Disconnect SPRK+"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="Scan Speed:"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/textView3"
        android:layout_marginBottom="27dp"
        app:layout_constraintBottom_toTopOf="@+id/Testdrive"
        android:layout_marginLeft="-3dp" />
</android.support.constraint.ConstraintLayout>
